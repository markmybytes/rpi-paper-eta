<!doctype html>
<html lang="{{ get_locale() | replace('_', '-') }}">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
        Error | Paper ETA
    </title>

    {# scripts #}
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    {# favicon #}
    <link href="{{ url_for('static', filename='images/favicon.ico') }}" rel="icon" type="image/x-icon">

    {# link #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/bootstrap.min.css" rel="stylesheet">

    <link href="{{ url_for('static', filename='stylesheets/utils.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='stylesheets/style.css') }}" rel="stylesheet">
</head>

<body>
    <div class="d-flex align-items-center justify-content-center vh-100 bg-theme text-white">
        <div class="text-center">
            <h1 class="display-1 fw-bold">{{ code }}</h1>
            <p class="fs-3"> <span class="text-danger">Opps!</span> {{ error.name or 'Internal Server Error' ~ _('!')}}
            </p>
            <p class="lead">
                {{ msg }}
            </p>
            <a href="{{ url_for('root.index') }}" class="btn btn-primary">{{ _('go_home') }}</a>
        </div>
    </div>
</body>

</html>